<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerLayout"
    tools:context="com.example.mariu.myapplication.MainActivity">


<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <ImageButton
            android:scaleType="fitCenter"
            android:id="@+id/imageButton1"
            android:layout_width="0dp"
            android:layout_height="185dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/catall"
            android:adjustViewBounds="true"
            />

    <ImageButton

        android:layout_gravity="center"
        android:id="@+id/imageButton2"
        android:layout_width="0dp"
        android:layout_height="185dp"
        android:layout_weight="1"
        android:background="@drawable/catmaki"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ImageButton

            android:layout_gravity="center"
            android:id="@+id/imageButton3"
            android:layout_width="0dp"
            android:layout_height="185dp"
            android:layout_weight="1"
            android:background="@drawable/catrole"
            android:adjustViewBounds="true"/>

        <ImageButton

            android:layout_gravity="center"
            android:id="@+id/imageButton4"
            android:layout_width="0dp"
            android:layout_height="185dp"
            android:layout_weight="1"
            android:background="@drawable/catnighiril" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:layout_weight="1">
        <ImageButton

            android:layout_gravity="center"
            android:id="@+id/imageButton5"
            android:layout_width="0dp"
            android:layout_height="185dp"
            android:layout_weight="1"
            android:background="@drawable/catseturi" />

        <ImageButton

            android:layout_gravity="center"
            android:id="@+id/imageButton6"
            android:layout_width="0dp"
            android:layout_height="185dp"
            android:layout_weight="1"
            android:background="@drawable/catsalate" />
    </LinearLayout>

</LinearLayout>




    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/menu_nav"
        android:id="@+id/menu_nav"
        android:layout_gravity="start"
        app:headerLayout="@layout/navigation_header">

    </android.support.design.widget.NavigationView>



</android.support.v4.widget.DrawerLayout>


