<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mariu.myapplication.DeliveryActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/firstLL"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Nume"
            android:autoSizeTextType="uniform"
            android:gravity="center"

            />

        <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="4"
            android:id="@+id/delivery_name"
            android:maxLines="1"
            android:inputType="text"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/secondLL"
        android:layout_below="@id/firstLL">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Adresa"
            android:gravity="center"
           />

        <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="4"
            android:id="@+id/delivery_address"
            android:maxLines="1"
            android:inputType="text"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/thirdLL"
        android:layout_below="@id/secondLL">

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Numar Telefon"
            android:autoSizeTextType="uniform"
            android:gravity="center"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="4"
            android:id="@+id/delivery_phone"
            android:maxLines="1"
            android:inputType="phone"/>
    </LinearLayout>
    <Button
        android:id="@+id/delivery_confirm"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="@string/placeorder"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
